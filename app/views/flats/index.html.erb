<h1 style='margin-left: 75px'>All our Flats (<%= Flat.count %>)</h1>
<div class="cards">

<% @flats.each do |flat| %>
  <div class="card" style="width: 30rem;">
    <div class="card-body bg-light">
      <h5 class="card-title"><%= flat.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
      <p class="card-text"><%= flat.description %></p>
      <p class="card-text"><i class="fa-solid fa-user-group"></i> <%= flat.number_of_guests %> <i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></p>
      <div class='bt-1'>
        <%= link_to 'More Info', flat_path(flat) %>
        <%= link_to 'Edit', flat_path(flat) %>
        <%= link_to 'Remove', flat_path(flat) %>
      </div>
    </div>
  </div>
<% end %>
</div>
